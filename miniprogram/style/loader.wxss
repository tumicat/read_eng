.loader-container {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  margin-top: -88rpx;
}

.menu-loader {
  padding: 88rpx;
  background-color: gray;
  opacity: 0.1;
  border-radius: 18rpx;
  margin-top: -88rpx;
}

.loader-icon {
  width: 158rpx; 
  height: 158rpx;
}

.loader-msg {
  font-size: 24rpx;
  color: #5f5f5f;
  margin-top: 38rpx;
  padding-bottom: 38rpx;
  text-align: center;
}

@keyframes load3 {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.load-bar-container {
  margin-top: 20rpx;
}

.loading-bar {
  background-color: transparent;
  margin: 4rpx;
  display: inline-block;
  width: 6rpx;
  height: 16rpx;
  border-radius: 8rpx;
  animation: loading 1s ease-in-out infinite;
}

.loading-bar-active {
  background-color: #ff8246;
}

.loading-bar:nth-child(1) {
  animation-delay: 0;
}

.loading-bar:nth-child(2) {
  animation-delay: 0.09s;
}

.loading-bar:nth-child(3) {
  animation-delay: .18s;
}

.loading-bar:nth-child(4) {
  animation-delay: .27s;
}

@keyframes loading {
  0% {
    transform: scale(1);
  }
  20% {
    transform: scale(1, 2.2);
  }
  40% {
    transform: scale(1);
  }
}