/**app.wxss**/
page {
  background: #f6f6f6;
  /* display: flex;
  flex-direction: column;
  justify-content: flex-start; */
  /* height: 100%; */
}

.page-section{
  width: 100%;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}

.page-section-spacing{
  box-sizing: border-box;
  padding: 0 20rpx;
}

.fix-bottom {
  position: fixed;
  bottom: 0;
}

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}

.primary-selector {
  color: #292929; 
  border: 4rpx solid #ff8246;
  border-radius: 10rpx;
}

.primary-input {
  color: #292929; 
  border-bottom: 4rpx solid #ff8246;
  font-size: 32rpx;
  padding: 18rpx;
  text-align: center;
  /* border-radius: 10rpx; */
}

.full-width {
  width: 100%;
}

.orange-btn {
  background-color: #ff8246;
  color: white;
  font-weight: bold;
  border-radius: 10rpx;
  line-height: normal;
  padding: 18rpx 28rpx;
}

.orange-light-btn {
  border: 2rpx solid #ff8246;
  color: #ff8246;
  background-color: white;
  background-size: cover;
  border-radius: 10rpx;
  line-height: normal;
  padding: 18rpx 28rpx;
}

.round-btn {
  height: 68rpx;
  width: 68rpx;
  border-radius: 50%;
  margin-left: 28rpx;
  margin-right: 28rpx;
  padding: 0;
}

.btn-icon {
  margin: 0;
  height: 68rpx;
  width: 68rpx;
}

.btn-hover {
  opacity: 0.8;
}

.btn-orange-light-hover {
  background-color: #ff814618;
}

.btn-middle {
  font-size: 32rpx;
  padding: 18rpx;
}

.btn-small {
  font-size: 28rpx;
  padding: 12rpx;
}

.primary-text {
  color: #ff8246;
  font-size: 50rpx;
}

.sub-text {
  color: #585858; 
  font-size: 32rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-col {
  display: flex;
  flex-direction: column;
}

.flex-center {
  justify-content: center;
}

.flex-align-center {
  align-items: center;
}

.flex-abs-center {
  justify-content: center;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

.flex-2 {
  flex: 2;
}

.align-center {
  text-align: center;
}

.menu-top-margin-l {
  margin-top: 28rpx;
}

.menu-top-margin-xl {
  margin-top: 38rpx;
}

.menu-bottom-margin-l {
  margin-bottom: 28rpx;
}

.menu-top-margin-m {
  margin-top: 18rpx;
}

.menu-bottom-margin-m {
  margin-bottom: 18rpx;
}

.menu-top-margin-s {
  margin-top: 8rpx;
}

.menu-bottom-margin-s {
  margin-bottom: 8rpx;
}

.menu-border-top {
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.menu-border-bottom {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.menu-btn-bar {
  width: 100%;
  background: #fff;
}

.menu-btn-icon {
  width: 50rpx;
  height: 50rpx;
  margin: 20rpx 28rpx 20rpx 48rpx;
}

.menu-btn-icon-small {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx 28rpx 20rpx 28rpx;
}

.menu-btn {
  font-size: 32rpx;
  text-align: left;
}

.menu-btn-hover {
  background-color: rgba(0, 0, 0, 0.1);
}

.list-title-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  margin: 10rpx 0rpx 10rpx 0rpx;
  border: 2rpx solid #D8D8D8;
  background-color: white;
  border-radius: 18rpx;
  overflow: hidden;
}

.list-title-text{
  display: -webkit-box;
  font-size: 32rpx;
  color: black;
  margin-left: 20rpx;
  width: 75%;
  line-height: 40rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow:hidden;
  text-overflow: ellipsis;
}

.list-title-img{
  height: 100rpx;
  width: 100rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}