@import "../../style/loader.wxss";

.scroll-container{
  position: fixed;
  top: 238rpx;
  width: 100%;
}

.bar-container{
  display: flex;
  flex-direction: column;
  white-space: nowrap;
  width: 100%;
  position: fixed;
  top: 0;
  padding-bottom: 18rpx;
}

.tag-bar{
  display:flex;
  flex-direction: row;
  white-space: nowrap;
  width: 100%;
  height: 100rpx;
  box-shadow: 5rpx 5rpx 5rpx #ccc;
  align-items: center;
  padding-top: 10rpx;
}

.tag-bar .tag{
  display: inline-block;
  width: 25%;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
}

.tag-bar .tag.active {
  border-radius: 10%;
  background-color: #eee;
  color: #ff8246;
  position: relative;
}

.tag-bar .tag.active:after {
  background-color: #ff8246;
  content: "";
  display: block;
  height: 5rpx;
  width: 100%;
  /* position */
  position: absolute;
  bottom: 0;
}
