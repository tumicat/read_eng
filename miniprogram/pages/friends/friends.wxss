@import "../../style/loader.wxss";

.friend-conainer {
  padding-top: 38rpx;
  padding-bottom: 38rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  width: 100%;
}

.friend-input-holder {
  font-size: 30rpx;
}

input{
    margin-left: 28rpx;
    margin-right: 28rpx;
    height: 76rpx;
}

.friend-code {
  padding: 0 18rpx;
  border: 4rpx solid #ff8246;
  border-radius: 8rpx;
}

.friend-btn {
  background-color: #ff8246;
  color: white;
  font-weight: bold;
}

.friend-btn-add {
  margin-left: 28rpx;
  margin-right: 8rpx;
}

.friend-btn-code {
  margin-left: 8rpx;
  margin-right: 28rpx;
}

button {
  border: 1rpx solid #ff8246;
  border-radius: 8rpx;
  font-size: 30rpx;
  height: 80rpx;
}

.friend-records-container {
  overflow-y: scroll;
}

.friend {
  height: 138rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.friend-hover {
  background-color: rgba(0, 0, 0, 0.1);
}

.friend-bottom {
  margin-bottom: 28rpx;
}

.no_friend_msg {
  font-size: 32rpx;
  color: #ff8246;
  text-align: center;
}

.friend-img-box {
  margin: 0 48rpx 0 48rpx;
}

.friend-img {
  width: 88rpx; 
  height: 88rpx;
}