.userinfo-display-text {
  font-size: 28rpx;
  margin: 2rpx 0;
}

.userinfo-display-sub-text {
  font-size: 28rpx;
  margin: 2rpx 0;
  color: #585858;
}

.weekly-record-banner {
  padding: 14rpx 0;
  background-color: #ff8246;
}

.weekly-record-container {
  margin-left: 28rpx;
  margin-right: 28rpx;
  padding-right: 28rpx;
  border-right: 1rpx solid white;
}

.weekly-record-txt {
  font-weight: bold;
  color: white;
  font-size: 28rpx;
}

.weekly-star-box {
  padding-right: 28rpx;
}

.star {
  width: 18rpx;
  height: 18rpx;
  border: 2rpx solid white;
  border-radius: 50%;
}

.star-active {
  background-color: white;
}

.summary-stats-section {
  padding: 28rpx;
}

.summary-stats-container {
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 18rpx;
  background-color: white;
}

.summary-stats-card {
  height: 100%;
  padding-bottom: 38rpx;
}

.summary-title {
  text-align: center;
  margin-top: 28rpx;
  margin-bottom: 28rpx;
  font-size: 32rpx;
}

.summary-stats-box {
  padding: 18rpx 0 0 0;
}

.stats-box {
  flex: 1;
  padding: 0 12rpx;
  margin: 0 8rpx;
}

.stats-title {
  margin-top: 8rpx;
  text-align: center;
  font-size: 28rpx;
  color: #585858;
}

.stats-title-black {
  text-align: center;
  font-size: 28rpx;
  margin-top: 18rpx;
  margin-bottom: 18rpx;
}

.stats {
  margin-top: 8rpx;
  text-align: center;
  font-size: 32rpx;
  /* color: #373a6d; */
}

.stats-image {
  height: 68rpx;
  width: 68rpx;
}

.stats-btn-left {
  margin: 0 20rpx 0 60rpx;
}

.stats-btn-right {
  margin: 0 60rpx 0 20rpx;
}

.eng_lvl {
  font-size: 30rpx;
  color: #ff8246;
  border-left: 1rpx solid #ff8246;
  border-right: 1rpx solid #ff8246;
  padding-left: 18rpx;
  padding-right: 18rpx;
  font-weight: bold;
}

.stats-progress {
  margin: 8rpx 38rpx;
}

.stats-progress progress {
  border-radius: 8rpx;
  overflow: hidden;
}

.empty-bottom {
  width: 100%;
  height: 28rpx;
}