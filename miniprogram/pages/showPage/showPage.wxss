@import "../../style/loader.wxss";

.badge {
  width: 128rpx;
  height: 128rpx;
  background-size: cover;
  background-color: transparent;
}

.show-banner {
  padding: 38rpx 0;
  background-color: transparent;
}

.badge-text {
  margin: 4rpx 0;
  font-size: 30rpx;
  border: 4rpx solid #ff8246;
  border-radius: 12rpx;
  padding: 6rpx 14rpx;
  color: #ff8246;
  width: 128rpx;
  text-align: center;
  /* font-weight: bold; */
}

.show-text {
  font-size: 30rpx;
  margin: 4rpx 0;
}

.show-text-sub {
  font-size: 30rpx;
  margin: 4rpx 0;
  color: #585858;
}

.summary-stats-container {
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 18rpx;
  background-color: white;
}

.summary-stats-card {
  height: 100%;
  padding: 38rpx 0;
}

.summary-title {
  text-align: center;
  margin-top: 28rpx;
  margin-bottom: 28rpx;
  font-size: 32rpx;
}

.summary-stats-box {
  padding: 18rpx 0 0 0;
}

.stats-box {
  flex: 1;
  padding: 0 12rpx;
  margin: 0 8rpx;
}

.stats-title {
  margin-top: 8rpx;
  text-align: center;
  font-size: 28rpx;
  color: #585858;
}

.stats-title-black {
  text-align: center;
  font-size: 28rpx;
  margin-top: 18rpx;
  margin-bottom: 18rpx;
}

.stats {
  margin-top: 8rpx;
  text-align: center;
  font-size: 32rpx;
  /* color: #373a6d; */
}

.stats-image {
  height: 68rpx;
  width: 68rpx;
}

.stats-btn-left {
  margin: 0 20rpx 0 60rpx;
}

.stats-btn-right {
  margin: 0 60rpx 0 20rpx;
}

.adv {
  width: 560rpx;
  height: 200rpx;
}

.no-top-margin {
  margin-top: 0;
}
