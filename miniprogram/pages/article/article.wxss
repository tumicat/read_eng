@import "../../style/loader.wxss";

.article-container {
  padding: 28rpx;
}

.title {
  margin-top: 28rpx;
  font-size: 38rpx;
  font-weight: bold;
}

.article-info-bar {
  margin-top: 8rpx;
  margin-bottom: 28rpx;
  color: #585858;
  font-size: 28rpx;
}

.article-top-image {
  margin-bottom: 28rpx;
  width: 100%;
  height: 350rpx;
  border-radius: 8rpx;
}

.article-content-container {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.article-content {
  font-size: 34rpx;
  text-align: justify;
  margin-bottom: 28rpx;
  line-height: 2;
}

.article-sub-title {
  font-size: 34rpx;
  font-weight: bold;
  line-height: 2;
}